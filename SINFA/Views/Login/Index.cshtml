
@{ Layout = null; }

<!-- login screen -->

<html>
<head>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- animista css animations-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <title>Acceso</title>
</head>
<body>
    <div class="main">

        <div class="render login-render">
            <img class="mb-2 animate__animated animate__fadeInDown duration-500" src="~/img/omni-logo.png" />
            <h2 class="mb-5">Sistema de Gestion de Notas - C5i</h2>
            <div class="form-wrap text-center animate__animated animate__fadeInUp duration-500">

                <h2>Iniciar Sesión</h2>
                <form>
                    <input style="border-radius:5px;" class="login-margin-tb login-error" type="text" placeholder="Usuario" title="Introducir nombre de usuario" id="Usuario">
                    <input style="border-radius:5px;" class="login-margin-tb" type="password" placeholder="Contraseña" title="Introducir contraseña" id="Clave">
                
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary login-margin-tb login-btn">Entrar</button>
                    </div>
                </form>

                <div class="spacer"></div>
                <a href="#">Olvidé mi contraseña</a>
            </div>

        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="~/Scripts/scripts/C5i/auth/Auth.js"></script>