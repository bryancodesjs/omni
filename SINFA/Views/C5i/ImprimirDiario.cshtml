
@{
    Layout = null;
    var _inicio = ViewBag.Inicio;
    var _final = ViewBag.Final;
    var _notas = ViewBag.Notas;
    //var _imagenes = ViewBag.Imagenes;
    var _apertura = ViewBag.Apertura;
    var _cierre = ViewBag.Cierre;
    var contador = 0;
    var posiciones = 1;
    var _qr = ViewBag.Qr;
}

<head>
    <link rel="stylesheet" href="~/Content/style.css">
    <!--bootstrap 4.6-->
    <link rel="stylesheet" href="~/Dependencies/bootstrap-4.6.0-dist/css/bootstrap.min.css">
    <!--bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <!-- animista css animations-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<body>
    <div id="mainContainer" class="main">
        <div class="render preview-diario">
            <div class="justify-content-between container search-wrap box mt30 d-flex mb-3 mt-5 ">
                <div class="abrir">
                   <a class="mb-3" href="/C5i"><h3><i class="bi bi-arrow-left"></i> Panel Principal</h3></a>
                </div>
                <div class="abrir">
                    <button class="btn btn-primary" id="Imprimir">
                        <i class="bi bi-printer"></i> Imprimir
                    </button>
                </div>
            </div>
            <div class="resultados-wrap">
                <!--item inicio-->
                <div id="notaResumida" class="item nota-imprimir-asistencia container background-primary shadow">
                    <div class="nota nota pt-5 pb-5 mb-5">
                        <div class="notaSection d-flex justify-content-between">
                            <div>
                                <img class="imprimir-img-dependencia" src="~/img/mide-logo.png" />
                            </div>
                            <div class="text-center mb70">
                                <h3><strong>Republica Dominicana</strong></h3>
                                <h3><strong>MINISTERIO DE DEFENSA</strong></h3>
                                <h2>CENTRO DE COMANDO, CONTROL, COMUNICACIONES, COMPUTADORAS, CIBERSEGURIDAD E INTELIGENCIA (C5i)</h2>
                                <h5 class="mt-3"><i>"Todo por la Patria"</i></h5>
                                <h5 class="mt-5">Compendio de las Informaciones emitidas por las Comandancias Generales y dependencias de las 
                                Fuerzas Armadas desde las @_apertura del dia @String.Format("{0:dd/MM/yyyy}", _inicio) hasta las @_cierre del dia @String.Format("{0:dd/MM/yyyy}", _final)</h5>
                            </div>
                            <img class="imprimir-img-dependencia" src="~/img/c5i.png" />
                        </div>
                    </div>

                    <!--ZONA DE IMPRESION-->
                    @foreach (var item in _notas)
                    {
                        <div class="nota p-5">
                            <div class="d-flex">
                                <div class="col-lg-8 no-bootstrap-padding">
                                    <h3 class="mb-4"><b>@item.asunto</b></h3>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="col-lg-8 flex-column d-flex justify-content-between no-bootstrap-padding">
                                    <p>@item.detalles</p>
                                    <div class="d-flex justify-content-start flex-column">
                                        <h4 class="secondary-text"><span class="mini-subtitle"><i class="bi bi-geo-alt"></i> @item.direccion</span>, @item.sector, @item.municipio, @item.provincia</h4>
                                        <h4 class="secondary-text"><i class="bi bi-clock"></i> @item.hora</h4>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="diario-img-wrap overflow-hidden w-100 h-100">
                                        <img class="w-100" src="~/img/blank-img.png" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        contador++;
                        posiciones++;
                    }
                    <!-- FIN DE ZONA DE IMPRESION-->
                </div>

            </div>
        </div>
    </div>
</body>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>