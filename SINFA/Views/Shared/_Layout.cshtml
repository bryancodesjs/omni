<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/style.css">
    <!--bootstrap 4.6-->
    <link rel="stylesheet" href="~/Dependencies/bootstrap-4.6.0-dist/css/bootstrap.min.css">
    <!--bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <!-- animista css animations-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <section class="container-fluid d-flex full-height no-bootstrap-padding">
        <div class="col-lg-2 flex-col background-primary side-nav">
            <div class="firma"><h5 class="pl-3" style="font-size:small;">©2021 - Version 1.0.0</h5></div>
            <div class="logo-container mb-3 mt-3 d-flex">
                <a id="logo" href="/C5i/Index"><img src="~/img/omni-logo.png" /></a>
            </div>
            <div class="list-group mt-5">
                <a href="/C5i/Index" class="list-group-item active"><i class="bi bi-laptop pr-2"></i> Principal</a>
                <a href="#" class="list-group-item"><i class="bi bi-bar-chart-steps pr-2"></i> Estadisticas</a>
                <a href="#" class="list-group-item"><i class="bi bi-chat-left-dots pr-2"></i> Mensajeria</a>
                <a href="#" class="list-group-item"><i class="bi bi-three-dots-vertical pr-2"></i> Ajustes</a>
                <a href="#" class="list-group-item"><i class="bi bi-question-circle pr-2"></i> Ayuda</a>
            </div>
        </div>
        <div class="col-lg-10 flex-col background-tertiary no-bootstrap-padding overflow-auto">
            <!--top nav-->
            <div class="nav-wrap d-flex background-secondary">
                <div class="nav-content d-flex container-fluid justify-content-between mb-3 mt-3 responsive-x-padding">
                    <div class="session-user d-flex align-items-center justify-content-around">
                        <i id="user-icon" class="bi bi-person-circle pr-2 "></i>
                        <h3 class="no-margin">@Session["Usuario"].ToString()</h3>
                    </div>
                    <div class="session-actions">
                        <a href="/Login" class="btn btn-outline-danger"><i class="bi bi-power"></i> Cerrar Sesion</a>
                    </div>
                </div>
            </div>
            <!--Render View-->
            @RenderBody()
        </div>
    </section>

</body>
<!--Bootstrap JS files-->
<script src="~/Dependencies/bootstrap-4.6.0-dist/js/bootstrap.min.js"></script>
<!--JQuery-->
<script src="~/Dependencies/jquery/jquery-3.6.0.js"></script>
<!-- custom js -->
<script src="~/Content/experimentacion.js"></script>
<script src="~/Scripts/scripts/C5i/auth/Salir.js"></script>
</html>








